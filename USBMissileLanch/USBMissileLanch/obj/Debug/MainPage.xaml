<Page
    x:Class="USBMissileLanch.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:USBMissileLanch"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Orientation="Vertical">
            <Button x:ConnectionId='1' Width="100" Height="100" Margin="0,10,0,0"                       >Connect</Button>

            <Button x:ConnectionId='2' Width="100" Height="100" Margin="0,10,0,0"                    >Up</Button>
            <Button x:ConnectionId='3' Width="100" Height="100" Margin="0,10,0,0"                      >Down</Button>
            <Button x:ConnectionId='4' Width="100" Height="100" Margin="0,10,0,0"                      >Left</Button>
            <Button x:ConnectionId='5' Width="100" Height="100" Margin="0,10,0,0"                       >Right</Button>
            <Button x:ConnectionId='6' Width="100" Height="100" Margin="0,10,0,0"                    >Stop</Button>
            <Button x:ConnectionId='7' Width="100" Height="100" Margin="0,10,0,0"                    >Fire</Button>
        </StackPanel>        
    </Grid>
</Page>

