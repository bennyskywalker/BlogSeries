<Page
    x:Class="USBMissileLanch.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:USBMissileLanch"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Orientation="Vertical">
            <Button Width="100" Height="100" Margin="0,10,0,0" Click="Button_Connect">Connect</Button>

            <Button Width="100" Height="100" Margin="0,10,0,0" Holding="button_Up">Up</Button>
            <Button Width="100" Height="100" Margin="0,10,0,0" Holding="button_Down">Down</Button>
            <Button Width="100" Height="100" Margin="0,10,0,0" Holding="button_Left">Left</Button>
            <Button Width="100" Height="100" Margin="0,10,0,0" Holding="button_Right">Right</Button>
            <Button Width="100" Height="100" Margin="0,10,0,0" Click="button_Stop">Stop</Button>
            <Button Width="100" Height="100" Margin="0,10,0,0" Click="button_Fire">Fire</Button>
        </StackPanel>        
    </Grid>
</Page>
